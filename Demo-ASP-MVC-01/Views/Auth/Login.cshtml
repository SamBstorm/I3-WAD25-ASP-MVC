@using (Html.BeginForm(FormMethod.Post, new { @class= "col-6 container"})){
    <div class="mb-3">
        @Html.LabelFor(m => m.Mail, new { @class= "form-label"})
        @Html.EditorFor(m => m.Mail, new { htmlAttributes = new { @class = "form-control", placeholder = "Votre adresse e-mail" } })
        @Html.ValidationMessageFor(m => m.Mail, null, new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Pwd, new { @class = "form-label" })
        @Html.EditorFor(m => m.Pwd, new { htmlAttributes = new { @class = "form-control", placeholder = "Votre mot de passe" } })
        @Html.ValidationMessageFor(m => m.Pwd, null, new { @class = "text-danger" })
    </div>
    <div class="btn-group">
        <button class="btn btn-outline-success" type="submit">Se connecter</button>
    </div>
}
