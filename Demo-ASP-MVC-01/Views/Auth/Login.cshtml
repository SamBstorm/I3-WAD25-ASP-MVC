@using Demo_ASP_MVC_01.Models.Auth
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model LoginForm
@if (TempData.ContainsKey("message"))
{
    <div class="alert @TempData["alert-type"]">
        <p>@TempData["message"]</p>
    </div>
}

