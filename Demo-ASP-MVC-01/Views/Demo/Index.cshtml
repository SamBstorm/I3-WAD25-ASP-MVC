@{
    string[] demos = [];
    if (ViewData.ContainsKey("Demos"))
    {
        demos = ViewBag.Demos;
    }
}
@if (TempData.ContainsKey("message"))
{
    string alertClass = (TempData["notificationType"].Equals("success")) ? "alert-success" : "alert-warning";
    <div class="alert @alertClass">
        <p>@TempData["message"]</p>
    </div>
}
<h1>Liste des démonstrations</h1>
<ul>
    @foreach (string demo in demos)
    {
        <li><a href="/Demo/@demo">@demo</a></li>
    }
</ul>